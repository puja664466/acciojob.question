import java.util.Scanner;
public class Main 
{
    public static void main(String[] args) 
    {
        float l, b, perimeter, area;
        Scanner s = new Scanner(System.in);
        
        l = s.nextFloat();
        b = s.nextFloat();
        perimeter = 2 * (l + b);
        System.out.println("Perimeter is = "+perimeter);
        area = l * b;
        System.out.println("Area is = "+area);
    }
}
